@{
    var pageName = ViewContext.RouteData.Values["page"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>AI and chill...</title>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] - KVBlog.Client</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Blog Template">
    <meta name="author" content="Xiaoying Riley at 3rd Wave Media">
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
    <!-- Theme CSS -->
    <link id="theme-style" rel="stylesheet" href="~/themes/devblog/assets/css/theme-3.css">
    <!-- FontAwesome JS-->
    <script defer src="~/themes/devblog/assets/fontawesome/js/all.min.js"></script>
</head>
<body>
    <div class="page-wrapper">
        <!-- Optional top nav / search bar -->
        <partial name="Partials/SearchHeaderPartialView" />
        <partial name="Partials/SideNavBarPartialView" />

        <main class="flex-fill">
            @RenderBody()
        </main>

        <footer class="footer text-center py-2 theme-bg-dark">
            <small class="copyright">
                © Copyright,
                <a href="https://www.linkedin.com/in/vasileiosk/" target="_blank">Vasilis K.</a>
                Theme by <a href="https://themes.3rdwavemedia.com" target="_blank">Xiaoying Riley</a>
                Powered by .NET 8
            </small>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
<!-- Javascript -->
<script src="~/themes/devblog/assets/plugins/popper.min.js"></script>
<script src="~/themes/devblog/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>