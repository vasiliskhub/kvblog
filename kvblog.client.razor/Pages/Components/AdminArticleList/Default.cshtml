@using Kvblog.Client.Razor.ViewModels
@model List<BlogArticle>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Slug</th>
            <th>Title</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Slug</td>
                <td>@item.Title</td>
                <td><a class="btn btn-success" asp-page="/Admin/BlogArticles/EditBlogArticle" asp-route-id="@item.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>